<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-8">
      <%= form_tag root_path, method: :get do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Find a movie"
        %>
        <%= submit_tag "Search", class: "btn btn-primary" %>
      <% end %>
      <div id="movies">
        <% @movies.each do |movie| %>
          <h4><%= movie.searchable.title %></h4>
          <p><%= movie.searchable.synopsis %></p>
          <% if movie.searchable_type == 'Movie' %>
            <p>Director: <%= movie.searchable.director.last_name %></p>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
